//SwiftUI (View): Головний екран -  горизонтальним скролом для погодинного прогнозу. форма для збереження улюблених міст
import SwiftUI
import Foundation

struct ContentView: View {
    
    @StateObject var weatherVM = WeatherViewModel()
    @State private var searchTown = ""
    
    var iconURL: URL? {
        URL(string: "https://openweathermap.org/img/wn/\(weatherVM.iconCode)@2x.png")
    }
    
    var body: some View {
        
        
        ZStack {
            LinearGradient(
                gradient: Gradient(colors: [Color.blue.opacity(0.3), Color.white]),
                startPoint: .top,
                endPoint: .bottom
            )
            .ignoresSafeArea()
            
            VStack(spacing: 40 ) {
                
                
                TextField("Введіть назву міста", text: $searchTown)
                    .padding()
                    .background(Color.white.opacity(0.25))
                    .clipShape(RoundedRectangle(cornerRadius: 10))
                    .padding(.horizontal)
                
                HStack{
                    Image(systemName: "star")
                        .imageScale(.large)
                        .foregroundColor(Color.yellow)
                        .foregroundStyle(.tint)
                        .padding()
                    
                    Button("Пошук") {
                        Task {
                            await weatherVM.fetchWeather(city: searchTown)
                        }
                    }
                    .padding()
                    .background(Color.blue)
                    .foregroundColor(.white)
                    .clipShape(Capsule())
                    
                    // завантаження пог8оди
                    if weatherVM.isLoading {
                        ProgressView()
                    }
                    
                    // Обробка помилки
                    if !weatherVM.errorMessage.isEmpty {
                        Text(weatherVM.errorMessage)
                            .foregroundColor(.red)
                    }

                    if !weatherVM.temperature.isEmpty {
                        Text("Температура: \(weatherVM.temperature)°C")
                            .font(.largeTitle)
                        
                        Text(weatherVM.description.capitalized)
                            .font(.headline)
                        
                        if let url = iconURL {
                            AsyncImage(url: url) { image in
                                image.resizable()
                                    .scaledToFit()
                                    .frame(width: 100)
                            } placeholder: {
                                ProgressView()
                            }
                        }
                    }
                    
                    Spacer()
                }
                .padding()
            }
        }
               
    }
}
        
        

#Preview {
    ContentView()
